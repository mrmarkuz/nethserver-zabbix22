package esmith;

use strict;
use Errno;
use esmith::util;
use NethServer::Password;


## Test if the roudcubemail Mysql DB exists, if yes, then upgrade it
     if ( -d '/var/lib/mysql/zabbix') {
        #system ('/usr/share/roundcubemail/bin/updatedb.sh --dir /usr/share/roundcubemail/SQL/ --package mysql.initial.sql &> /dev/null');
        system ('/usr/bin/mysql zabbix < /usr/share/zabbix-mysql/schema.sql');
        system ('/usr/bin/mysql zabbix < /usr/share/zabbix-mysql/images.sql');
        system ('/usr/bin/mysql zabbix < /usr/share/zabbix-mysql/data.sql');
     }

##test if the mysql db is created, if not then the user and the mysql db are created
     if ( ! -d '/var/lib/mysql/zabbix') {
my $password = NethServer::Password::store('zabbix') || die('Could not generate roundcubemail password!');

my $commands = join("\n", 
	      "GRANT ALL PRIVILEGES ON `zabbix`.* TO 'zabbix'\@'localhost' IDENTIFIED BY '$password';",
	      "FLUSH PRIVILEGES;",
	      "CREATE DATABASE IF NOT EXISTS zabbix DEFAULT CHARACTER SET = 'utf8';"
     ) . "\n";

print $commands;

open(FH, '|-', '/usr/bin/mysql -B -f') || die("[ERROR] Could not connect to mysql");
print FH $commands;     
close(FH);

#my @dirs = glob "/usr/share/roundcubemail*";

#system("/usr/bin/mysql roundcubemail < ".$dirs[0]."/SQL/mysql.initial.sql");

system ('/usr/bin/mysql zabbix < /usr/share/zabbix-mysql/schema.sql');
system ('/usr/bin/mysql zabbix < /usr/share/zabbix-mysql/images.sql');
system ('/usr/bin/mysql zabbix < /usr/share/zabbix-mysql/data.sql');

exit (0);}
